.hotels
  .container
    .row
      .col-xs-3(ng-repeat="hotel in home.hotels")
        .project.project-default
          .shape
            .shape-text
              | {{hotel.rating}}
          .project-content
            image(ng-src="{{hotel.photo_url}}", ng-if="hotel.photo_url")
