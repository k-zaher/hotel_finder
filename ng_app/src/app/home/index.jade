.row.status-msg
  {{home.systemMsg}}
.row
  .col-lg-offset-3.col-lg-8
    .col-lg-6(ng-if="!home.geoLocation")
      input#city.form-control(vs-google-autocomplete="{ types:['(cities)'] }", ng-model='home.city_name', vs-latitude="home.position.lat", vs-longitude="home.position.long",type='text', name='city', placeholder='Enter city name')
    .col-lg-3.well.pull-right
      .lat Lat: {{home.position.lat}}
      .long Long: {{home.position.long}}

